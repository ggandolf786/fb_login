<table style="width: 1100px;">
  <thead>
  <tr>
    <td colspan="4" style="text-align: right; font-weight: bold; background: linear-gradient(to bottom, #b8e1fc 0%,#90bae4 0%,#ffffff 1%,#c4c4c4 100%);">
      <%= link_to 'Logout', logout_path %>
      <%= link_to 'Create New Profile', new_profile_path %>
    </td>
  </tr>
  <tr>
    <th width="80">Profile Pic</th>
    <th>Name</th>
    <th>UID</th>
    <th width="510">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @profiles.each do |profile| %>
    <tr>
      <td><img src="https://graph.facebook.com/<%=profile.uid%>/picture?type=small" alt="profile_pic" style="height:50px !important; width:50px !important;"></td>
      <td><%= profile.name %></td>
      <td><%= profile.uid %></td>
      <td>
        <%= link_to 'Edit', edit_profile_path(profile.id) %> &nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;
        <%= link_to 'Delete', profile_path(profile.id), method: :delete %> &nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;
        <%= link_to 'Shared Pictures', shared_pictures_profile_path(profile.id) %> &nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;
        <%= link_to 'Login', login_profile_path(profile.id) %> &nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;
        <%= link_to 'Shared Album', shared_album_profile_path(profile.id) %> &nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;
        <%= link_to 'Passwords', mypasswords_profile_path(profile.id) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>